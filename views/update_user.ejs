
<!-- include header  -->
<%- include('include/_header') %> 

  <!-- main section start here  -->
  <div class="container m-auto py-10">

    <div class="table_wrapper">
      <section class="antialiased bg-gray-100 text-gray-600 px-4">
        <div class="flex flex-col justify-center h-full">
          <!-- Table -->
          <div class="w-full max-w-2xl mx-auto bg-white shadow-lg rounded-sm border border-gray-200">
            <header class="px-5 py-4 border-b border-gray-100 flex justify-between">
                <a href="/"
                  class="inline-flex text-white bg-green-500 border-0 py-2 px-6 focus:outline-none hover:bg-green-600 rounded text-sm">
                  Back
                </a>
                <h1 class="text-xl text-center">Update User</h1>
                </header>
            <div class="w-full ">
                <br />
                
                <!-- form handling start here  -->

                <form class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4" method="post" id="update_user">
                    <div class="mb-4">
                      <input type="hidden" name="id" value="<%= user._id %> ">
                      <label class="block text-gray-700 text-sm font-bold mb-2" for="name">
                        Name
                      </label>
                      <input class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" id="name" name="name" type="text" value="<%= user.name %> " placeholder="Name">
                    </div>
                    <div class="mb-6">
                      <label class="block text-gray-700 text-sm font-bold mb-2" for="password">
                        Email
                      </label>
                      <input class="shadow appearance-none border  rounded w-full py-2 px-3 text-gray-700 mb-3 leading-tight focus:outline-none focus:shadow-outline" id="email" value="<%= user.email %>" name="email" type="email" placeholder="Email">
                      <!-- <p class="text-red-500 text-xs italic">Please choose a password.</p> -->
                    </div>
                    <div class="mb-6 flex">
                      <label class="block text-gray-700 text-sm font-bold mb-2 mr-10" >
                        Gender
                      </label>
                      <div class="flex justify-center">
                          <div class="form-check form-check-inline mr-5">
                            <input class="form-check-input form-check-input appearance-none rounded-full h-4 w-4 border border-gray-300 bg-white checked:bg-blue-600 checked:border-blue-600 focus:outline-none transition duration-200 mt-1 align-top bg-no-repeat bg-center bg-contain float-left mr-2 cursor-pointer" type="radio" name="gender" id="male" value="male" <%= user.gender == "male" ? "checked" : "" %> />
                            <label class="form-check-label inline-block text-gray-800" for="male">Male</label>
                          </div>
                          <div class="form-check form-check-inline">
                            <input class="form-check-input form-check-input appearance-none rounded-full h-4 w-4 border border-gray-300 bg-white checked:bg-blue-600 checked:border-blue-600 focus:outline-none transition duration-200 mt-1 align-top bg-no-repeat bg-center bg-contain float-left mr-2 cursor-pointer" type="radio" name="gender" id="female" value="female" <%= user.gender == "female" ? "checked" : "" %> >
                            <label class="form-check-label inline-block text-gray-800" for="female">Female</label>
                          </div>
                          
                        </div>
                      <p class="text-red-500 text-xs italic"></p>
                    </div>
                    <div class="mb-6 flex">
                      <label class="block text-gray-700 text-sm font-bold mb-2 mr-10" >
                        Status
                      </label>
                      <div class="flex justify-center">
                          <div class="form-check form-check-inline mr-5">
                            <input class="form-check-input form-check-input appearance-none rounded-full h-4 w-4 border border-gray-300 bg-white checked:bg-blue-600 checked:border-blue-600 focus:outline-none transition duration-200 mt-1 align-top bg-no-repeat bg-center bg-contain float-left mr-2 cursor-pointer" type="radio" name="status" id="active" value="active" <%= user.status == "active" ? "checked" : "" %> >
                            <label class="form-check-label inline-block text-gray-800" for="active">Active</label>
                          </div>
                          <div class="form-check form-check-inline">
                            <input class="form-check-input form-check-input appearance-none rounded-full h-4 w-4 border border-gray-300 bg-white checked:bg-blue-600 checked:border-blue-600 focus:outline-none transition duration-200 mt-1 align-top bg-no-repeat bg-center bg-contain float-left mr-2 cursor-pointer" type="radio" name="status" id="inactive" value="inactive" <%= user.status == "inactive" ? "checked" : "" %> >
                            <label class="form-check-label inline-block text-gray-800" for="inactive">Deactive</label>
                          </div>
                          
                        </div>
                      <p class="text-red-500 text-xs italic"></p>
                    </div>
                
                    <div class="flex items-center justify-between">
                      <button class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline w-full" type="submit">
                        Submit
                      </button>
                    </div>
                  </form>

                <!-- form handling start here  -->

                <p class="text-center text-gray-500 text-xs">
                  &copy;2021 Mohd Rehan Qureshi. All rights reserved.
                </p>
              </div>
          </div>
        </div>
      </section>
    </div>
  </div>
  <!-- main section end here  -->

<!-- include footer  -->
<%- include('include/_footer') %> 